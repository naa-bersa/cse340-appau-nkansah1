
    <h1><%= title %></h1>

    <% if (messages.error) { %>
        <div class="flash-message"><%= messages.error %></div>
    <% } %>
<%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>



    <form action="/account/register" method="POST">

        <label for="account_firstname" class="required">First Name:</label>
        <input type="text" id="account_firstname" name="account_firstname" placeholder="Enter your first name" required>

        <label for="account_lastname" class="required">Last Name:</label>
        <input type="text" id="account_lastname" name="account_lastname" placeholder="Enter your last name" required>

        <label for="account_email" class="required">Email:</label>
        <input type="email" id="account_email" name="account_email" placeholder="Enter your email address" required>

        <label for="account_password" class="required">Password:</label>
          <input type="password" id="password" name="account_password" 
           pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" 
           required /><br /><br />
           
        <div>
            <small>
                <strong>Password must:</strong><br>
                - Be at least <strong>12 characters</strong> long<br>
                - Contain at least <strong>1 capital letter</strong><br>
                - Contain at least <strong>1 number</strong><br>
                - Contain at least <strong>1 special character</strong><br>
            </small>
        </div>

        <button type="submit">Register</button>
    </form>
</body>
</html>
