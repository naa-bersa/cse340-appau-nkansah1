<title><%= title %></title>

<h1><%= title %></h1>

<% if (flashMessage) { %>
  <p><%= flashMessage %></p>
<% } %>

<form action="/inv/add-inventory" method="POST" enctype="multipart/form-data">
  <label for="classificationList">Classification:</label>
  <%- classificationList %>

  <label for="make">Make:</label>
  <input type="text" id="make" name="make" required />

  <label for="model">Model:</label>
  <input type="text" id="model" name="model" required />

  <label for="year">Year:</label>
  <input type="number" id="year" name="year" required />

  <label for="color">Color:</label>
  <input type="text" id="color" name="color" required />

  <label for="description">Description:</label>
  <textarea id="description" name="description" required></textarea>

  <label for="price">Price:</label>
  <input type="number" step="0.01" id="price" name="price" required />

  <label for="miles">Miles:</label>
  <input type="number" id="miles" name="miles" required />

 <!-- Image File Input (Disabled) -->
<label for="image">Select Image:</label>
<input
   type="file"
   id="image"
   name="image"
   accept="image/png"
   disabled
 /> 

<!-- Image Preview Section (Only shows preset image) -->
<img
   id="preview"
   src="/images/vehicles/no-image.png" 
   alt="Predefined Image"
   style="width: 200px; height: auto; margin-top: 10px;"
 />


 <!-- Thumbnail (Optional Field) -->
 <label for="thumbnail">Thumbnail URL:</label>
 <input
   type="text"
   id="thumbnail"
   name="thumbnail"
   value="<%= '/images/vehicles/no-image-available-thumb.png' %>"
   readonly
   placeholder="e.g., /images/vehicles/no-image-available-thumb.png"
 />


  <button type="submit">Add Vehicle</button>
</form>

